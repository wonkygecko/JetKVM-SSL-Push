# .jetkvm.env.example
# ========================

# Dry Run mode
DRY_RUN=true #false

# Certmate credentials
CERTMATE_BASE=https://certmate.example.com
CERTMATE_TOKEN="YOUR_API_TOKEN"

# SSH configuration
SSH_KEY=/home/user/.ssh/id_ed25519
JETKVM_USER=root

# Each entry: "ssh_host|certmate_name"
JETKVM_HOSTS="jetkvm1|jetkvm1.example.com jetkvm2|jetkvm2.example.com"

# Optional logging verbosity
LOG_LEVEL=info